{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "middlewares/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}